package AIGames;

import java.util.Random;
import java.util.Scanner;

public class guessingGame {
	static Scanner scan = new Scanner(System.in);
	static Random rand = new Random();
	static int playerSelection = 0;
	static int randomNumber = 0;
	static int guess = 0;
	static int guesses = 0;
	static int numberofGuesses = 0;
	static Scanner playerInput = new Scanner(System.in);

	public static void main(String[] args) {
		System.out.println(
				"Choose your difficulty: \n1) Easy \n2) Medium" + "\n3) Hard");
		playerSelection = playerInput.nextInt();
		if (playerSelection == 1) {
			EasyMode();
		}
		if (playerSelection == 2) {
			MediumMode();
		}
		if (playerSelection == 3) {
			HardMode();
		}

	}

	public static void EasyMode() {
		randomNumber = rand.nextInt(10) + 1;
		System.out.println("Choose a number between 1 and 10");
		do {
			guess = scan.nextInt();
			if (guess > randomNumber) {
				guesses++;
				System.out.println("Too high. Pick again");

			}
			if (guess < randomNumber) {
				guesses++;
				System.out.println("Too low. Pick again");

			}
			if (guess == randomNumber) {
				guesses++;
				System.out.println(
						"Congratulations you won! Would you like to see "
								+ "your statistics? \n1) Yes \n2) No");
				playerSelection = playerInput.nextInt();
				if (playerSelection == 1) {
					displayStats();
				} else if (playerSelection == 2) {
					System.out.println("Goodbye!");
					break;
				}
			}
		} while (guess != randomNumber);
	}

	public static void MediumMode() {
		randomNumber = rand.nextInt(10) + 1;
		System.out.println("Choose a number between 1 and 100");
		do {
			guess = scan.nextInt();
			if (guess > randomNumber) {
				guesses++;
				System.out.println("Too high. Pick again");
			}
			if (guess < randomNumber) {
				guesses++;
				System.out.println("Too low. Pick again");
			}
			if (guess == randomNumber) {
				guesses++;
				System.out.println(
						"Congratulations you won! Would you like to see "
								+ "your statistics? \n1) Yes \n2) No");
				playerSelection = playerInput.nextInt();
				if (playerSelection == 1) {
					displayStats();
				} else if (playerSelection == 2) {
					System.out.println("Goodbye!");
					break;
				}
			}
		} while (guess != randomNumber);
	}

	public static void HardMode() {
		randomNumber = rand.nextInt(10) + 1;
		System.out.println("Choose a number between 1 and 1000");
		do {
			guess = scan.nextInt();
			if (guess > randomNumber) {
				guesses++;
				System.out.println("Too high. Pick again");

			}
			if (guess < randomNumber) {
				guesses++;
				System.out.println("Too low. Pick again");

			}
			if (guess == randomNumber) {
				guesses++;
				System.out.println(
						"Congratulations you won! Would you like to see "
								+ "your statistics? \n1) Yes \n2) No");
				playerSelection = playerInput.nextInt();
				if (playerSelection == 1) {
					displayStats();
				} else if (playerSelection == 2) {
					System.out.println("Goodbye!");
					break;
				}
			}
		} while (guess != randomNumber);
	}

	public static void displayStats() {
		numberofGuesses = guesses;
		System.out.println("number of guesses: " + guesses);

	}
}
